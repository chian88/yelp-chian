.container
  .row.p-3
    %div
      %h2 Sunway Velocity Mall
      %p Rating <span>4.5</span> / 5 with <span>6</span> reviews

    .ml-auto
      %button.btn.btn-danger(type="button") Write a Review

      .btn-group
        %button.btn.btn-outline-secondary(type="button") Add Photo
        %button.btn.btn-outline-secondary(type="button") Share
        %button.btn.btn-outline-secondary(type="button") Bookmark

    .carousel.slide.mb-3#business_pic(data-ride="carousel")
      %ol.carousel-indicators
        %li.active(data-target="#business_pic" data-slide-to="0")
        %li(data-target="#business_pic" data-slide-to="1")
        %li(data-target="#business_pic" data-slide-to="2")

      .carousel-inner
        .carousel-item.active
          %img.d-block.w-100(src="http://via.placeholder.com/2000x1000" alt="First slide")

        .carousel-item
          %img.d-block.w-100(src="http://via.placeholder.com/2000x1000" alt="Second slide")  

        .carousel-item
          %img.d-block.w-100(src="http://via.placeholder.com/2000x1000" alt="Third slide")

      %a.carousel-control-prev(href="#busines_pic" role="button" data-slide="prev")
        %span.carousel-control-prev-icon

      %a.carousel-control-next(href="#busines_pic" role="button" data-slide="next")
        %span.carousel-control-next-icon
